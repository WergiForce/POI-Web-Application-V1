<div class="uk-card uk-card-primary uk-card-body">
    <h3 class="uk-card-title">Image Upload</h3>
    <form class="uk-form-horizontal" action="/uploadfile/{{id}}" method="POST" enctype="multipart/form-data">
        <div class="uk-margin">
            <label class="uk-form-label" for="form-horizontal-text">Select Image</label>
        </div>
        <br>
        <div class="uk-align-left">
            <input type="file" class="uk-input" name="imagefile" accept="image/png, image/jpeg">
        </div>
        <p uk-margin>
            <input type="submit" value="Upload" class="uk-button uk-button-default">
        </p>
    </form>
</div>